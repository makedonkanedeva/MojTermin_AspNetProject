@model IEnumerable<MojTermin.Domain.DomainModels.Referral>

@{
    ViewData["Title"] = "Index";
}

<h1>Referrals</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Term</th>
            <th>Patient</th>
            <th>Doctor forwared to</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Term</td>
            @{
                var patientName = @item.Patient.Name + " " + @item.Patient.Surname;
                <td>@patientName</td>
            }
            @{
                var doctorName = @item.ForwardTo.Name + " " + @item.ForwardTo.Surname;
                <td>@doctorName</td>
            }
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
